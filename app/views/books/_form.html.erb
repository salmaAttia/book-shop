<%= render 'shared/errors', obj: @book %>
<div class='row '>
  <div class='col-xs-12 '>
    <%= form_for(@book, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div id="container" style="width:100%;">
        <div id="left" style="float:left; width:30%;">
       <%= image_tag("BookImage.png", size: "200x200") %> <h4>Upload Book Image</h4> <%= f.file_field :avatar %></div>
      </div>
    
    <div id="right" style="float:right; width:70%;" >
        <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Title of book", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of book" %>
        </div>
      </div>
      <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :currentPrice %>
          </div>
          <div class="col-sm-2">
              <%= f.text_field :currentPrice, class: "form-control", placeholder: "Price", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :avamount %>
        </div>
        <div class="col-sm-2">
            <%= f.text_field :avamount, class: "form-control", placeholder: "Av. amount", autofocus: true %>
        </div>
      </div>
         <div align="center"><%= f.submit class: 'btn btn-primary btn-lg' %></div> 
         <div align="center">[ <%= link_to "Cancel request and return to books listing", books_path %> ]</div>
        </div>
        </div>
    <% end %>
  </div>
</div>